//largest number
class Main {
    public static void main(String[] args) {
        
     int a=7,b=11,c=2;
     
     if(a<b)
     {
         System.out.println("b is larger");
     }
     else if(b<c)
     {
         System.out.println("c is larger");
     }
     else
     System.out.println("a is larger");

    }
}
