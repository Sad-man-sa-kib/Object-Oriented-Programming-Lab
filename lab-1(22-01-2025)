//sum arry a
public class Main {
    public static void main(String[] args) {
                double average; 
        int[] a = {5, 7, 8, 11, 17, 40};
        int sum = 0;
        for (int num : a) {
            sum += num;
        }
       
        System.out.println("The sum of the array is: " + sum);
    }
}
